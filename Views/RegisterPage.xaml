<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_15830MAUI.Views.RegisterPage"
             Title="Register">
    <VerticalStackLayout Spacing="25" Padding="30,0" 
                        VerticalOptions="Center">
        <Label 
            Text="Register"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />

        <Entry 
            x:Name="NameEntry"
            Placeholder="Name"
            SemanticProperties.Hint="Enter your name" />

        <Entry 
            x:Name="EmailEntry"
            Placeholder="Email"
            SemanticProperties.Hint="Enter your email"
            Keyboard="Email" />

        <Entry 
            x:Name="PasswordEntry"
            Placeholder="Password"
            SemanticProperties.Hint="Enter your password"
            IsPassword="True" />

        <Button 
            x:Name="RegisterButton"
            Text="Register"
            SemanticProperties.Hint="Create your account"
            Clicked="OnRegisterClicked"
            HorizontalOptions="Center" />

        <Button 
            x:Name="BackButton"
            Text="Back to Login"
            SemanticProperties.Hint="Return to login page"
            Clicked="OnBackClicked"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>