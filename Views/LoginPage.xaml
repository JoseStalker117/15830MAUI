<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_15830MAUI.Views.LoginPage"
             Title="Login">
    <VerticalStackLayout Spacing="25" Padding="30,0" 
                        VerticalOptions="Center">
        <Label 
            Text="Login"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />

        <Entry 
            x:Name="EmailEntry"
            Placeholder="Email"
            SemanticProperties.Hint="Enter your email"
            Keyboard="Email" />

        <Entry 
            x:Name="PasswordEntry"
            Placeholder="Password"
            SemanticProperties.Hint="Enter your password"
            IsPassword="True" />

        <Button 
            x:Name="LoginButton"
            Text="Login"
            SemanticProperties.Hint="Login to your account"
            Clicked="OnLoginClicked"
            HorizontalOptions="Center" />

        <Button 
            x:Name="RegisterButton"
            Text="Register"
            SemanticProperties.Hint="Go to registration page"
            Clicked="OnRegisterClicked"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage> 